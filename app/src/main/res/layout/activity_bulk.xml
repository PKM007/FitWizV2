<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_signed"
    tools:context=".bulk">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient">

            <TextView
                android:id="@+id/AlertTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                android:gravity="center_horizontal"
                android:text="BULK N CUT"
                android:textSize="40dp" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="DAY 1"
            android:id="@+id/day1header"
            android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blueheader"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/day1header"
                android:text=" Chest N Tricept Workout "
                android:id="@+id/chestntricep"
                android:textSize="25dp" />
            


            <TextView
                android:id="@+id/day1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chestntricep"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:text="@string/day1" />

            <Button
                android:id="@+id/day1Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/day1Text"
                android:text="Start Exercise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:layout_below="@+id/day1Start"
                android:gravity="center"
                android:id="@+id/day2"
                android:text="DAY 2"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/leg"
                android:text="Leg Workout"
                android:textSize="25dp" />



            <TextView
                android:id="@+id/day2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leg"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:text="@string/day2" />

            <Button
                android:id="@+id/day2Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/day2Text"
                android:text="Start Exercise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:layout_below="@+id/day2Start"
                android:gravity="center"
                android:id="@+id/day3"
                android:text="DAY 3"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/backnbicep"
                android:text="Back N Bicep Workout"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/day3Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backnbicep"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:text="@string/day3" />

            <Button
                android:id="@+id/day3Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/day3Text"
                android:text="Start Exercise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:layout_below="@+id/day3Start"
                android:gravity="center"
                android:id="@+id/day4"
                android:text="DAY 4"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/cardioabs"
                android:text="Cardio Abs Workout"
                android:textSize="22dp" />



            <TextView
                android:id="@+id/day4Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardioabs"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:text="@string/day4" />

            <Button
                android:id="@+id/day4Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/day4Text"
                android:text="Start Exercise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:layout_below="@+id/day4Start"
                android:gravity="center"
                android:id="@+id/day5"
                android:text="DAY 5"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day5"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/rest1"
                android:text="Rest"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/day5Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rest1"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:ems="10"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:text="@string/rest" />



            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/blue"
            android:layout_below="@+id/day5Text"
            android:gravity="center"
            android:id="@+id/day6"
            android:text="DAY 6"
            android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day6"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/shoulder"
                android:text="Shoulder Workout"
                android:textSize="25dp" />



            <TextView
                android:id="@+id/day6Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoulder"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:ems="10"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:text="@string/day6" />

            <Button
                android:id="@+id/day6Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/day6Text"
                android:text="Start Exercise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/blue"
                android:layout_below="@+id/day6Start"
                android:gravity="center"
                android:id="@+id/day7"
                android:text="DAY 7"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blueheader"
                android:layout_below="@+id/day7"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/rest2"
                android:text="Rest"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/day7text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rest2"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:text="@string/rest" />


        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/my_header"
        app:menu="@menu/my_nav_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>